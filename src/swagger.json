              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "admin": true,
                  "id": "fdjkb35kb-435895hb5-fsdflfdsd3",
                  "name": "User name",
                  "email": "email@example.com",
                  "created_at": "2021-03-23T03:59:52.818Z",
                  "updated_at": "2021-03-23T03:59:52.818Z"
                }
              }
            }
          },
          "404": {
            "description": "When there's no user with this ID",
